<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codingjoa.mapper.TestMapper">
<!-- 
    idx         NUMBER
    id          VARCHAR2(50)    UNIQUE  NOT NULL,
    name        VARCHAR2(50)            NOT NULL,
    password    VARCHAR2(50)            NOT NULL, 
-->

	<select id="select" resultType="testVo">
		SELECT * FROM test
	</select>
	
	<insert id="insert" parameterType="testVo">
		<selectKey keyProperty="idx" resultType="int" order="BEFORE">
			SELECT seq_test.NEXTVAL FROM DUAL
		</selectKey>
		INSERT INTO test (
			idx,
			id,
			name,
			password
		) VALUES (
			#{idx},
			#{id},
			#{name},
			#{password}
		)
	</insert>
	
	<update id="update" parameterType="testVo">
		<selectKey keyProperty="idx" resultType="int" order="BEFORE">
			SELECT MAX(idx) FROM test
		</selectKey>
		UPDATE
			test
		SET
			name = #{name},
			password = #{password}
		WHERE
			idx = #{idx} 
	</update>
	
	<delete id="remove">
		DELETE FROM test WHERE idx IN ( SELECT MAX(idx) FROM test )
	</delete>
	
</mapper>